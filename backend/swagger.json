{
  "swagger": "2.0",
  "info": {
    "title": "API 문서",
    "version": "1.0",
    "description": "Flask 애플리케이션의 API 문서입니다. 사용자 관리, 메시지, 스토어 관련 작업에 대한 엔드포인트를 포함합니다."
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/allStore": {
      "get": {
        "summary": "모든 스토어 조회",
        "description": "모든 사용자 목록과 정보를 가져옵니다.",
        "tags": [
          "스토어"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string",
            "description": "JWT token for authentication. Format: Bearer <token>"
          }
        ],
        "responses": {
          "200": {
            "description": "모든 사용자 목록 및 정보 조회",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "store_list": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "userID": {
                            "type": "integer",
                            "example": 1
                          },
                          "username": {
                            "type": "string",
                            "example": "Alice"
                          },
                          "type": {
                            "type": "string",
                            "example": "A"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "사용자 정보가 없습니다",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "사용자가 없습니다"
                }
              }
            }
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "/register": {
      "post": {
        "summary": "사용자 등록",
        "description": "이름, 학번, 비밀번호 등의 정보를 입력하여 사용자를 등록합니다.",
        "tags": [
          "사용자"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "홍길동"
                },
                "studentID": {
                  "type": "string",
                  "example": "20241234"
                },
                "password": {
                  "type": "string",
                  "example": "1111"
                },
                "choiceType": {
                  "type": "string",
                  "example": "A"
                },
                "topic": {
                  "type": "string",
                  "example": "하고 싶은 말"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "사용자 등록 성공."
          },
          "400": {
            "description": "잘못된 입력 또는 이미 존재하는 사용자."
          },
          "500": {
            "description": "회원 가입 오류"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "사용자 로그인",
        "description": "학번과 비밀번호를 입력하여 사용자가 로그인할 수 있습니다.",
        "tags": [
          "사용자"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "studentID": {
                  "type": "string",
                  "example": "20241234"
                },
                "password": {
                  "type": "string",
                  "example": "1111"
                }
              },
              "required": [
                "studentID",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "로그인 성공.",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "message": {
                  "type": "string",
                  "example": "로그인 성공"
                },
                "name": {
                  "type": "string",
                  "example": "홍길동"
                },
                "choiceType": {
                  "type": "string",
                  "example": "A"
                },
                "token": {
                  "type": "string",
                  "example": "jwt_token_example"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 학번 또는 비밀번호.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "비밀번호가 일치하지 않습니다"
                }
              }
            }
          }
        }
      }
    },
    "/store/{userID}": {
      "get": {
        "summary": "사용자 스토어 조회",
        "description": "특정 사용자의 스토어 정보를 조회합니다.",
        "tags": [
          "스토어"
        ],
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "사용자의 ID.",
            "example": 123
          },
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string",
            "description": "JWT token for authentication. Format: Bearer <token>"
          }
        ],
        "responses": {
          "200": {
            "description": "사용자 스토어 정보.",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "message": {
                  "type": "string",
                  "example": "Store for userID 1"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string",
                      "example": "홍길동"
                    },
                    "choiceType": {
                      "type": "string",
                      "example": "A"
                    },
                    "coin": {
                      "type": "integer",
                      "example": 500
                    },
                    "memoChoiceCount": {
                      "type": "object",
                      "properties": {
                        "A": {
                          "type": "integer",
                          "example": 5
                        },
                        "B": {
                          "type": "integer",
                          "example": 5
                        },
                        "C": {
                          "type": "integer",
                          "example": 5
                        },
                        "D": {
                          "type": "integer",
                          "example": 5
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없습니다./ 선택지 오류",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "User with ID 1 not found / unknown choice"
                }
              }
            }
          }
        },
        "security": [
          {
            "jwt_token": []
          }
        ]
      }
    },
    "/store/{userID}/write/{type}": {
      "post": {
        "summary": "스토어에 메시지 작성",
        "description": "사용자가 자신의 스토어에 메시지를 작성합니다.",
        "tags": [
          "스토어"
        ],
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "사용자의 ID.",
            "example": 123
          },
          {
            "name": "type",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "메시지 유형.(e.g., A, B, C, D)",
            "example": "A"
          },
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string",
            "description": "JWT token for authentication. Format: Bearer <token>"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "example": "안녕하세요. 메시지입니다."
                }
              },
              "required": [
                "content"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "메시지 작성 성공.",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "message": {
                  "type": "string",
                  "example": "쪽지가 성공적으로 작성되었습니다."
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "memo_id": {
                      "type": "integer",
                      "example": 1
                    },
                    "sender": {
                      "type": "integer",
                      "example": 123
                    },
                    "receiver": {
                      "type": "integer",
                      "example": 789
                    },
                    "content": {
                      "type": "string",
                      "example": "This is a memo content."
                    },
                    "choiceType": {
                      "type": "string",
                      "example": "A"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "내용을 입력하세요",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "내용을 입력하세요"
                }
              }
            }
          },
          "403": {
            "description": "User not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "유저를 찾을 수 없습니다."
                }
              }
            }
          },
          "404": {
            "description": "Self-message or invalid action",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "본인의 붕어빵에는 쪽지를 작성할 수 없습니다"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "메시지 작성 중 오류가 발생했습니다"
                }
              }
            }
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "/store/{userID}/read/{postID}": {
      "get": {
        "summary": "메시지 열람",
        "description": "본인에게 작성된 쪽지 열람",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "required": true,
            "type": "integer",
            "description": "쪽지 읽을 유저의 아이디"
          },
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string",
            "description": "JWT token for authentication. Format: Bearer <token>"
          }
        ],
        "responses": {
          "200": {
            "description": "메시지 읽기 성공",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "message": {
                  "type": "string",
                  "example": "쪽지를 읽었습니다. 123 님에게 500 코인이 지급되었습니다"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "memo_id": {
                      "type": "integer",
                      "example": 1
                    },
                    "sender": {
                      "type": "integer",
                      "example": 456
                    },
                    "receiver": {
                      "type": "integer",
                      "example": 456
                    },
                    "content": {
                      "type": "string",
                      "example": "This is a memo content."
                    },
                    "choiceType": {
                      "type": "string",
                      "example": "A"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "접근 구너한 없음",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "권한이 없습니다. 다른 사용자의 메시지를 읽을 수 없습니다"
                }
              }
            }
          },
          "404": {
            "description": "메시지를 찾을 수 없음",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "쪽지를 찾을 수 없습니다"
                }
              }
            }
          },
          "500": {
            "description": "작성자 정보 찾을 수 없음 / 서버에러",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "보낸 사람의 정보를 찾을 수 없습니다"
                }
              }
            }
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "tags": [
      {
        "name": "사용자",
        "description": "사용자 관리 관련 엔드포인트"
      },
      {
        "name": "스토어",
        "description": "스토어 관련 엔드포인트"
      }
    ]
  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT token for authentication. Format: Bearer <token>"
    }
  }
}